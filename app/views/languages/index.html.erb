<p id="notice"><%= notice %></p>

<h1>Linguagens</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Status</th>
      <th scope="col">Date created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= language.description %></td>
        <td><%= language.price %></td>
        <td><%= language.quantity %></td>
        <td><%= language.status %></td>
        <td><%= language.date_created %></td>
        <td><%= link_to 'Exibir', language, :class => "btn btn-info btn-sm" %></td>
        <td><%= link_to 'Editar', edit_language_path(language), :class => "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Apagar', language, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

