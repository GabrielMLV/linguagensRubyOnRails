<%= form_with(model: language, local: true) do |form| %>
  <% if language.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(language.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
        <% language.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <form>
    <div class="form-group">
        <label for="InputName">Nome*</label>
        <%= form.text_field :name, :required => true, :class => "form-control", :placeholder => "Insira o nome", :id => "InputName" %>
        <small class="form-text text-muted">Ex: Javascript.</small>
    </div>

    <div class="form-group">
        <label for="InputDesc">Descrição*</label>
        <%= form.text_area :description, :required => true, :class => "form-control", :placeholder => "Descrição da linguagem", :id => "InputDesc" %>
        <small class="form-text text-muted">Ex: Javascript é top demais!</small>
    </div>

    <div class="form-group">
      <label for="InputPrice">Preço*</label>
      <%= form.number_field :price, :required => true, :class => "form-control", :placeholder => "59.90", :id => "InputPrice" %>
    </div>

    <div class="form-group">
    <label for="InputQuant">Quantidade*</label>
      <%= form.number_field :quantity, :class => "form-control", :required => true, :placeholder => "Ex: 10", :id => "InputQuant" %>
    </div>

    <div class="form-group">
      <label>Status ativo</label>
      <%= form.number_field :status, :class => "form-control is-valid", :required => true, :value => 1 %>
      <div class="valid-feedback">
        Ativo!
      </div>
    </div>

    <div class="form-group">
    <label for="InputPrice">Data de criação</label>
      <%= form.datetime_select :date_created, :class => "form-control", :required => true %>
    </div>

    <div class="actions form-group">
      <%= form.submit %>
    </div>
  </form>
<% end %>
